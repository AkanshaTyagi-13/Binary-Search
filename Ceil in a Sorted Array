class Solution {
    public int findCeil(int[] arr, int x) {
        // code here
        int s=0,e=arr.length-1,ans=Integer.MAX_VALUE;
        while(s<=e){
            int mid=s+(e-s)/2;
            if(arr[mid]>=x){
                ans=Math.min(ans,mid);
                e=mid-1;
            }
            else{
                s=mid+1;
            }
        }
        return ans==Integer.MAX_VALUE?-1:ans;
    }
}
