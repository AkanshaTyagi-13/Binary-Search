class Solution {
    public int findKRotation(int arr[]) {
        // Code here
        int len=arr.length;
        int s=0,e=len-1;
        while(s<=e){
            int mid=s+(e-s)/2;
            int next=(mid+1)%len;
            int prev=(mid+len-1)%len;
            if(arr[mid]<arr[prev]&&arr[mid]<arr[next]) return mid;
            else if(arr[mid]>arr[e]){
                s=mid+1;
            }
            else e=mid-1;
        }
        return 0;
    }
}
